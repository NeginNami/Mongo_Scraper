<div class="container-fluid" id="main_container">
	<nav class="navbar navbar-default" id="scraper_nav">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">Mongo Scraper</a>
			</div>
			<ul class="nav navbar-nav">
				<li class="active">
					<a href="#">Home</a>
				</li>
				<li>
					<a href="#">Saved Articles</a>
				</li>
				<li>
					<button type="button" class="btn btn-danger" id="scrape_button">Scrape New Articles</button>
				</li>
			</ul>
		</div>
	</nav>
	<div class="jumbotron">
		<div id="jumbotron_text">
			<h1>Mongo Scraper</h1>
			<h2>New York Times Edition</h2>
		</div>
	</div>
	{{#each articles}}
		<div id="article_section">
			<div class="article_node">
				<div class="row article_title_row">
					<div class="col-lg-10 col-md-10 col-sm-10">
						<h3> {{title}} </h3>
					</div>
					<div class="col-lg-2 col-md-2 col-sm-2">
						<button type="button" class="btn btn-warning" id="save_button">Save the Article</button>
					</div>
				</div>
				<div class="row article_desc_row">
					<div class="col-lg-12 col-md-12 col-sm-12">
						<h4>{{description}} </h4>
					</div>
				</div>
			</div>
		</div>
	{{/each}}


</div>